<%= form_for [:supervisor, @course] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.label :title, class: "label-new-course" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :description, class: "label-new-course" %><br>
    <%= f.text_area :description, rows: 10, class: "form-control" %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :status, class: "label-new-course" %>
    <%= select :course, :status, Course.statuses.keys.to_a, {}, {class: "form-control"} %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :start_time, t("application.string_constant.start_date"),
      class: "label-new-course" %>
    <%= f.text_field :start_time, :"data-provide" => "datepicker",
      value: Time.current.strftime('%b-%d-%Y'), class: "form-control" %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :end_time, t("application.string_constant.end_date"),
      class: "label-new-course" %>
    <%= f.text_field :end_time, :"data-provide" => "datepicker",
      value: Time.current.strftime('%b-%d-%Y'), class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t("application.button.submit"), class: "btn btn-primary" %>
  </div>
<% end %>
