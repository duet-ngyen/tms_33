<div class="row">
  <div>
    <%= form_for @course, url: supervisor_course_assign_subjects_path do |f| %>
      <h1><%= t "application.title.update_subject_to_course" %> </h1>
      <%= collection_check_boxes(:course, :subject_ids, @subjects, :id, :name) do |s|%>
        <%= s.label("data-value" => s.value) {s.check_box + s.text} %></br>
      <% end %>
      <div class="actions">
        <%= f.submit t("application.button.submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
